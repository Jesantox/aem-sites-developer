<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="FOOTER CONFIGURATION"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <section-logo
                        jcr:primaryType="nt:unstructured"
                        jcr:title="LOGO"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <config-logo
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                                margin="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heading1
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                        level="{Long}1"
                                                        text="Imagem"/>
                                                    <image
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldLabel="Selecione uma Imagem"
                                                        fieldDescription="Insira imagens do DAM ou cole uma URL externa"
                                                        name="./logo"
                                                        required="{Boolean}true"
                                                        rootPath="/content/dam"/>
                                                </items>
                                            </config-logo>
                                            <config-description
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                                margin="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <description
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                        fieldLabel="Descrição a baixo da logo"
                                                        name="./description"
                                                        required="{Boolean}true"/>
                                                </items>
                                            </config-description>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </section-logo>

                    <section-pagina
                        jcr:primaryType="nt:unstructured"
                        jcr:title="PÁGINA"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Nome do tópico"
                                                name="./titlePage"
                                                required="{Boolean}true"/>
                                            <config-text-page
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                                margin="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <multifield-page
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        eaem-show-on-collapse="EAEM.showProductName"
                                                        fieldLabel="Lista de páginas"
                                                        fieldDescription="Insira no mínimo 05 opções. No máximo 10">
                                                        <field
                                                            granite:class="cmp-form-options__editor-item-multifield-composite-item coral-Well"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/container"
                                                            name="./listPage">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <column
                                                                    granite:class="cmp-form-options__editor-item-multifield-composite-item-container"
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <name-page
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                            fieldLabel="Título"
                                                                            name="./title"
                                                                            required="{Boolean}true"/>
                                                                    </items>
                                                                </column>
                                                            </items>
                                                        </field>
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            max="5"
                                                            min="2"
                                                            regex="multifield"
                                                            regexText="Insira no mínimo 02 steps. No máximo 05"/>
                                                    </multifield-page>
                                                </items>
                                            </config-text-page>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </section-pagina>

                    <section-pagina-util
                        jcr:primaryType="nt:unstructured"
                        jcr:title="PÁGINA ÚTIL"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <title-util
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Nome do tópico"
                                            name="./titleUtilPage"
                                            required="{Boolean}true"/>
                                            <config-text-page-util
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                                margin="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <multifield-page-util
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        eaem-show-on-collapse="EAEM.showProductName"
                                                        fieldLabel="Lista de Páginas Úteis"
                                                        fieldDescription="Insira no mínimo 05 opções. No máximo 10">
                                                        <field
                                                            granite:class="cmp-form-options__editor-item-multifield-composite-item coral-Well"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/container"
                                                            name="./listUtilPage">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <column
                                                                    granite:class="cmp-form-options__editor-item-multifield-composite-item-container"
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <name-page-util
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                            fieldLabel="Título"
                                                                            name="./name"
                                                                            required="{Boolean}true"/>
                                                                    </items>
                                                                </column>
                                                            </items>
                                                        </field>
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            max="5"
                                                            min="2"
                                                            regex="multifield"
                                                            regexText="Insira no mínimo 02 steps. No máximo 05"/>
                                                    </multifield-page-util>
                                                </items>
                                            </config-text-page-util>
                                            <config-more-template
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                                margin="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <text-more-template
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="Texto do link"
                                                        name="./moreTemplateText"
                                                        required="{Boolean}true"/>
                                                    <url-more-template
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldLabel="Insira uma URL"
                                                        name="./moreTemplateLink"
                                                        required="{Boolean}true"/>
                                                </items>
                                            </config-more-template>
                                        </items>
                                    </column>
                                </items>                   
                            </columns>
                        </items>
                    </section-pagina-util>

                    <section-social-network
                    jcr:primaryType="nt:unstructured"
                    jcr:title="REDE SOCIAL"
                    sling:resourceType="granite/ui/components/coral/foundation/container"
                    margin="{Boolean}true">
                    <items jcr:primaryType="nt:unstructured">
                        <columns
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            margin="{Boolean}true">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <title-social-network
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Nome do tópico"
                                        name="./titleSocialNetwork"
                                        required="{Boolean}true"/>
                                        <config-social-network
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/well"
                                            margin="{Boolean}true">
                                            <items jcr:primaryType="nt:unstructured">
                                                <multifield-social-network
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                    composite="{Boolean}true"
                                                    eaem-show-on-collapse="EAEM.showProductName"
                                                    fieldLabel="Lista de Redes Sociais"
                                                    fieldDescription="Insira no mínimo 03 opções. No máximo 06">
                                                    <field
                                                        granite:class="cmp-form-options__editor-item-multifield-composite-item coral-Well"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/container"
                                                        name="./listSocialNetwork">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <column
                                                                granite:class="cmp-form-options__editor-item-multifield-composite-item-container"
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <name-social-network
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="Nome"
                                                                        name="./name"
                                                                        required="{Boolean}true"/>
                                                                    <link-social-network
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="Link externo"
                                                                        name="./link"
                                                                        required="{Boolean}true"/>
                                                                    <image-social-network
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="Path do Ícone"
                                                                        name="./image"
                                                                        required="{Boolean}true"/>
                                                                </items>
                                                            </column>
                                                        </items>
                                                    </field>
                                                    <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        max="6"
                                                        min="3"
                                                        regex="multifield"
                                                        regexText="Insira no mínimo 03 steps. No máximo 06"/>
                                                </multifield-social-network>
                                            </items>
                                        </config-social-network>
                                    </items>
                                </column>
                            </items>                   
                        </columns>
                    </items>
                </section-social-network>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>