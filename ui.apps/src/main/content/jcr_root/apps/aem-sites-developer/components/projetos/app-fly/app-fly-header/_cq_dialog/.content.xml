<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="HEADER CONFIGURATION"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">

                    <section-logo
                        jcr:primaryType="nt:unstructured"
                        jcr:title="LOGO"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <config-logo
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                                margin="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heading1
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                        level="{Long}1"
                                                        text="Imagem"/>
                                                    <image
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldLabel="Selecione uma Imagem"
                                                        name="./logo"
                                                        required="{Boolean}true"
                                                        rootPath="/content/dam"/>
                                                </items>
                                            </config-logo>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </section-logo>

                    <section-background
                        jcr:primaryType="nt:unstructured"
                        jcr:title="COR DE FUNDO"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <config-background
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                                margin="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heading0
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                        level="{Long}1"
                                                        text="Background"/>
                                                    <background-colors
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                        showDefaultColors="{Boolean}false"
                                                        text="Escolha uma cor de fundo"
                                                        fieldLabel="Escolha uma cor de fundo"
                                                        fieldDescription="Escolha na paleta de cores uma cor"
                                                        name="./background"
                                                        showProperties="{Boolean}true"
                                                        showSwatches="{Boolean}true"
                                                        autogenerateColors="{Boolean}true"
                                                        required="{Boolean}true">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <default jcr:primaryType="nt:unstructured" value="#fff"/>
                                                            <purple jcr:primaryType="nt:unstructured" value="#e6e6fa"/>
                                                            <blue jcr:primaryType="nt:unstructured" value="#BCD1F5"/>
                                                        </items>
                                                    </background-colors>
                                                </items>
                                            </config-background>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </section-background>

                    <section-text
                        jcr:primaryType="nt:unstructured"
                        jcr:title="MENU"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <config-text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                                margin="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <menu-option-one
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="1° Opção"
                                                        name="./optionOne"
                                                        required="{Boolean}true"/>
                                                    <menu-option-two
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="2° Opção"
                                                        name="./optionTwo"
                                                        required="{Boolean}true"/>
                                                    <menu-option-three
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="3° Opção"
                                                        name="./optionThree"
                                                        required="{Boolean}true"/>
                                                    <menu-option-for
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="4° Opção"
                                                        name="./optionFor"
                                                        required="{Boolean}true"/>
                                                    <menu-option-five
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="5° Opção"
                                                        name="./optionFive"
                                                        required="{Boolean}true"/>
                                                </items>
                                            </config-text>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </section-text>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
