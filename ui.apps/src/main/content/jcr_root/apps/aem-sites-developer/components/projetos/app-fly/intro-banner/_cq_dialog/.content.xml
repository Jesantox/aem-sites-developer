<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="INTRO BANNER CONFIGURATION"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">

                    <section-config-general
                        jcr:primaryType="nt:unstructured"
                        jcr:title="CONFIG GENERAL"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <config
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                                margin="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <title
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="Ponha um título"
                                                        name="./title"
                                                        required="{Boolean}true"/>
                                                    <description
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="Ponha uma descrição"
                                                        name="./description"
                                                        required="{Boolean}true"/>
                                                    <config-button
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well"
                                                        margin="{Boolean}true"> 
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <heading-button
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                                level="{Long}1"
                                                                text="Sessão de Botões"/>
                                                            <btn-apple
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Ponha uma título para o botão da Apple"
                                                                name="./titleBtnApple"
                                                                required="{Boolean}true"/>
                                                            <btn-apple-link
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                                fieldLabel="Insira um link no botão da Apple"
                                                                forceSelection="{Boolean}true"
                                                                name="./btnAppleLink"
                                                                required="{Boolean}true"/>      
                                                            <btn-android
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Ponha uma título para o botão do Android"
                                                                name="./titleBtnAndroid"
                                                                required="{Boolean}true"/>
                                                            <btn-android-link
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                                fieldLabel="Insira um link no botão do Android"
                                                                forceSelection="{Boolean}true"
                                                                name="./btnAndroidLink"
                                                                required="{Boolean}true"/>
                                                        </items>
                                                    </config-button>
                                        
                                                    <config-image
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well"
                                                        margin="{Boolean}true">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <heading-image
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                                level="{Long}1"
                                                                text="Sessão de Imagens"/>
                                                            <image
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/pathfield"
                                                                fieldLabel="Insira uma Imagem"
                                                                fieldDescription="Selecina imagens do DAM ou cole uma URL externa"
                                                                name="./image"
                                                                required="{Boolean}true"
                                                                rootPath="/content/dam"/>
                                                            <btn-icon-apple
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/pathbrowser"
                                                                fieldLabel="Selecione um Ícone para o botão Apple"
                                                                fieldDescription="Selecione imagens do DAM ou cole uma URL externa"
                                                                name="./btnIconApple"
                                                                required="{Boolean}true"
                                                                rootPath="/content/dam"/>
                                                            <btn-icon-android
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/pathbrowser"
                                                                fieldLabel="Selecione um Ícone para o botão Android"
                                                                fieldDescription="Selecione imagens do DAM ou cole uma URL externa"
                                                                name="./btnIconAndroid"
                                                                required="{Boolean}true"
                                                                rootPath="/content/dam"/>
                                                        </items>
                                                    </config-image>
                                                </items>
                                            </config>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </section-config-general>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>